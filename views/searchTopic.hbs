<h2>Search Results for {{ myInstance.topic }}</h2>
{{#each myInstances as |myInstance|}}
    <li>
      {{myInstance.name}}
      <p>{{myInstance.description}}</p>
      <img src="{{myInstance.url}}">
      <div>
          <img id="heart" src="/images/emptyLike.png" onclick="this.src=`/images/fullLike.png`">
        {{myInstance.hearts}}
      </div>
      <form action="/edit/{{ myInstance.id }}">
          <input type="submit" value="Edit" />
      </form>
    </li>
{{/each}}
